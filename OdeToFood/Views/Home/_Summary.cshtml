@model  Restaurant

<section class="panel panel-default">
    <h3 class="panel-heading">@Model.Name</h3>
    <div class="panel-body">
        Cuisine: @Model.Cuisine
    </div>
    <div class="panel-footer">
        <a asp-action="Details" asp-controller="Home" asp-route-id="@Model.Id" class="btn btn-default">More</a>
        <a asp-page="/Restaurant" asp-route-id="@Model.Id" class="btn btn-default">Edit</a>
    </div>
</section>
