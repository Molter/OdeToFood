@model Restaurant

@{
    ViewBag.Title = "Create Restaurant";

}

<h1>Creating a restaurant</h1>
<form method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="@Model.Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div>
        <label asp-for="Cuisine"></label>
        <select asp-for="@Model.Cuisine" asp-items="@Html.GetEnumSelectList<CuisineType>()"></select>
        <span asp-validation-for="Cuisine"></span>
    </div>

    <input type="submit" value="Save" />
</form>